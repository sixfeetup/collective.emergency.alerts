  <object name="emergency" meta_type="CMF Action" insert-before="logout">
   <property name="title">Emergency Alerts</property>
   <property name="description">Manage the emergency alerts</property>
   <property
      name="url_expr">string:${globals_view/navigationRootUrl}/@@emergency_manager</property>
